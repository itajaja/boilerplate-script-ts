{
  "name": "boilerplate",
  "version": "1.0.0",
  "main": "lib/index.js",
  "scripts": {
    "build": "rm -rf lib && tsc",
    "format": "4c format . './*'",
    "lint": "4c lint . './*'",
    "prepublishOnly": "yarn run build",
    "release": "4c release",
    "start": "node lib/index.js",
    "tdd": "jest --watch",
    "test": "yarn lint && yarn typecheck && yarn testonly",
    "testonly": "jest --passWithNoTests",
    "typecheck": "tsc --noEmit && tsc --noEmit -p tests"
  },
  "publishConfig": {
    "access": "public"
  },
  "prettier": "@4c/prettier-config",
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*": [
      "yarn 4c lint --fix",
      "git add"
    ]
  },
  "jest": {
    "preset": "@4c/jest-preset",
    "testEnvironment": "node"
  },
  "release": {
    "publishDir": "lib"
  },
  "devDependencies": {
    "@4c/cli": "^2.0.1",
    "@4c/jest-preset": "^1.4.5",
    "@4c/prettier-config": "^1.1.0",
    "@4c/tsconfig": "^0.3.1",
    "@types/jest": "^26.0.20",
    "@types/node": "*",
    "@typescript-eslint/eslint-plugin": "^4.8.1",
    "@typescript-eslint/parser": "^4.8.1",
    "eslint-config-4catalyzer": "^1.1.0",
    "eslint-config-4catalyzer-jest": "^2.0.4",
    "eslint-config-4catalyzer-typescript": "^3.0.1",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.3.0",
    "jest": "^26.0.0",
    "lint-staged": "^10.5.1",
    "prettier": "^2.0.1",
    "typescript": "^4.0.5"
  }
}
